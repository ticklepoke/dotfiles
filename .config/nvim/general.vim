syntax on

set hidden
set noerrorbells
set number relativenumber
set title
set fileencoding=utf-8
set termguicolors

set smartindent

set expandtab
set tabstop=4 softtabstop=4
set shiftwidth=4

set ignorecase
set smartcase
set incsearch
set cursorline
set nowrap

set noswapfile
set nobackup
set nowritebackup
set undodir=~/.vim/undodir
set undofile

set cmdheight=2

set colorcolumn=120
highlight ColorColumbn ctermbg=0 guibg=#592929

set scrolloff=10
set modifiable

set splitright
set splitbelow
